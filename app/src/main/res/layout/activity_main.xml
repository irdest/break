<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:keepScreenOn="true"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tips_case"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="130px"
        android:layout_marginLeft="875px"
        android:text="Case"
        android:visibility="visible" />

    <TextView
        android:id="@+id/case_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/tips_case"
        android:layout_toRightOf="@+id/tips_case"
        android:layout_marginLeft="15px"
        android:text="0"/>

    <TextView
        android:id="@+id/tips_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="80px"
        android:layout_marginLeft="875px"
        android:text="Time"
        android:visibility="visible" />

    <TextView
        android:id="@+id/time_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/tips_time"
        android:layout_toRightOf="@+id/tips_time"
        android:layout_marginLeft="15px"
        android:text="0"/>

    <com.example.ly_lipengfei.abreak.BreakTime
        android:id="@+id/break_time_view"
        android:layout_width="@dimen/break_time_size"
        android:layout_height="@dimen/break_time_size"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/break_time_Margin"/>

</RelativeLayout>